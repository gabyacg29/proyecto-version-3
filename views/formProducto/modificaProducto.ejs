<form action="<%= '/products/'+data.Productos.id+'?_method=PUT' %>" method="POST">
  <div class="row align-items-center pt-5 pb-5 rounded">
    <div class="col-12 col-md-6 text-center pt-5">
      <img class="imgProducto" src="<%= '/img/productos/'+data.Productos.Imagen %>" />
    </div>
    <div class="col-12 col-md-6 text-center text-md-left pt-5">
      <div class="form-group">
        <label for="nombre">Nombre:</label>
        <input
          type="text"
          class="form-control"
          id="nombre"
          name="nombre"
          value="<%= data.Productos.Nombre %>"
        />
      </div>
      <div class="form-group">
        <label for="descripcion">Descripcion</label>
        <textarea
          class="form-control"
          id="descripcion"
          name="descripcion"
        ><%= data.Productos.Descripcion %></textarea>
      </div>
      <div class="form-group">
        <label for="categoria">Categoria</label>
        <input
          type="text"
          class="form-control"
          id="categoria"
          name="categoria"
          value="<%= data.Productos.Categoria %>"
        />
      </div>
      <div class="form-group">
        <label for="color">Color</label>
        <input
          type="text"
          class="form-control"
          id="color"
          name="color"
          value="<%= data.Productos.Color %>"
        />
      </div>
      <div class="form-group">
        <label for="precio">Precio</label>
        <input
          type="number"
          step="0.01"
          class="form-control"
          id="precio"
          name="precio"
          value="<%= data.Productos.Precio %>"
        />
      </div>
      <button type="submit" class="btn btn-secondary">
        Modificar Producto
      </button>
    </div>
  </div>
</form>
