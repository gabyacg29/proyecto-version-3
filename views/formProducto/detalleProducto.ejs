<!-- Incluye Head y Header -->
<%- include('./partials/head.ejs')%> <%- include('./partials/header.ejs')%>

<div class="row justify-content-center align-items-center">
  <div class="col-12 col-md-6 pt-5 pb-5">
    <% if(data.Formulario == 'NuevoProducto'){ %>
      <%- include('./formProducto/NuevoProducto.ejs') %>
    <% } %>
    <form action="" method="POST">
      <div class="row align-items-center pt-5 pb-5 rounded beige">
        <div class="col-12 col-md-6 text-center">
          <img
            class=""
            src="/img/productos/varietalesbianchi-malbec_280x.jpg"
          />
          <div class="form-group">
            <div class="input-group justify-content-center align-items-center">
                <label class="input-group-btn">
                    <span class="btn btn-secondary btn-file">
                        Subir Imagen <input accept=".jpg,.png,.jpeg,.gif" name="Imagen" type="file" id="Imagen" class="hidden">
                    </span>
                </label>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-6">
          <div class="form-group">
            <label for="nombre">Nombre:</label>
            <input type="text" class="form-control" id="nombre" />
          </div>
          <div class="form-group">
            <label for="descripcion">Descripcion</label>
            <textarea class="form-control" id="descripcion"></textarea>
          </div>
          <div class="form-group">
            <label for="categoria">Categoria</label>
            <input type="text" class="form-control" id="categoria" />
          </div>
          <div class="form-group">
            <label for="color">Color</label>
            <input type="text" class="form-control" id="color" />
          </div>
          <div class="form-group">
            <label for="precio">Precio</label>
            <input type="number" step="0.01" class="form-control" id="precio" />
          </div>
          <button type="submit" class="btn btn-secondary">
            Agregar al Carrito
          </button>
          <button type="submit" class="btn btn-secondary">
            Modificar Producto
          </button>
          <button type="submit" class="btn btn-secondary">Cagar Producto</button>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- Incluye Footer -->
<%- include('./partials/footer.ejs') %>
