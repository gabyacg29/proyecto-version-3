<!-- Incluye Head y Header -->
<%- include('./partials/head.ejs')%> 
<%- include('./partials/header.ejs')%>


 <!-- Ventana Modal -- Si es mayor o no? -->
 <input type="checkbox" id="cerrar">
 <label for="cerrar" id="btn-cerrar">X</label>
 <div class="modal">
     <div class="contenido">
         <div class="row ">
             <div class="col-sm-12 modal-age-head ">
                 <img src="../public/img/logo.png" width="200px" height="150px" alt="logo">
             </div>
         </div>

         <div class="row">
             <div class="col-sm-12 modal-age">
                 <h2>Bienvenido</h2>
                 <h6>Tenés que tener al menos 18 años para ingresar.</h6>
                 
             </div>
         </div>
     </div>
 </div>

 
<!-- Carrusel -->
<div class="bd-example">
  <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li
        data-target="#carouselExampleCaptions"
        data-slide-to="0"
        class="active"
      ></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active style=100vh">
        <img
          class="d-block w-100 banner"
          data-src="holder.js/700x350?auto=yes&amp;bg=777&amp;fg=555&amp;text=First slide"
          alt="First slide [900x300]"
          src="../public/img/vinos1.jpg"
          data-holder-rendered="true"
        />
        <div class="carousel-caption d-none d-md-block"></div>
      </div>
      <div class="carousel-item">
        <img
          class="d-block w-100 banner"
          data-src="holder.js/700x350?auto=yes&amp;bg=666&amp;fg=444&amp;text=Second slide"
          alt="Second slide [900x300]"
          src="../public/img/vinos2.jpg"
          data-holder-rendered="true"
        />
        <div class="carousel-caption d-none d-md-block"></div>
      </div>
    </div>
    <a class="carousel-control-prev"
      href="#carouselExampleCaptions"
      role="button"
      data-slide="prev" >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="carousel-control-next"
      href="#carouselExampleCaptions"
      role="button"
      data-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>


<!-- Productos -->
<div class="container products-wrapper">
  <div class="row pt-md-5 pb-md-5">
    <% if(data.Formulario == 'GrillaProductos'){ %>
      <%- include('./producto.ejs') %> <% } %> 
    <% if(data.Formulario == 'Home'){ %> 
      <%- include('./advert.ejs') %> 
    <% } %>
  </div>
</div>
   
<% if(data.User.Categoria == 'Admin'){ %>
  <div class="row justify-content-center align-items-center">
    <div class="col-8 col-md-2 pt-5 pb-5">
      <a href="products/create" class="btn btn-block bg-success"
        >Nuevo Producto</a
      >
    </div>
  </div>
<% } %>
<!-- Incluye Footer -->
<%- include('./partials/footer.ejs') %>
